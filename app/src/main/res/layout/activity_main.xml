<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/j1_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="JUGADOR 1" />

            <TextView
                android:id="@+id/score1_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                tools:text="PUNTUACIÓN" />

            <ImageView
                android:id="@+id/dice1_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/number_1"
                android:scaleType="centerInside"/>

            <Button
                android:id="@+id/j1_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TIRAR"/>

            <Button
                android:id="@+id/stop1_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PLANTARSE"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/j2_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="JUGADOR 2" />

            <TextView
                android:id="@+id/score2_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                tools:text="PUNTUACIÓN" />

            <ImageView
                android:id="@+id/dice2_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/number_1"
                android:scaleType="centerInside"/>

            <Button
                android:id="@+id/j2_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TIRAR"/>

            <Button
                android:id="@+id/stop2_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PLANTARSE"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>